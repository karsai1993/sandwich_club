<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.udacity.sandwichclub.DetailActivity">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/origin_tv"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold|italic"
            android:textSize="@dimen/main_name_text_size"
            android:layout_marginBottom="@dimen/detail_activity_bottom_margin"
            android:layout_marginTop="@dimen/detail_activity_top_margin"/>

        <LinearLayout
            style="@style/detail_activity_layout_style">
            <TextView
                android:text="@string/detail_also_known_as_label"
                style="@style/detail_activity_label_style" />

            <TextView
                android:id="@+id/also_known_tv"
                style="@style/detail_activity_value_style" />
        </LinearLayout>

        <LinearLayout
            style="@style/detail_activity_layout_style">
            <TextView
                android:text="@string/detail_ingredients_label"
                style="@style/detail_activity_label_style" />

            <TextView
                android:id="@+id/ingredients_tv"
                style="@style/detail_activity_value_style" />
        </LinearLayout>

        <LinearLayout
            style="@style/detail_activity_layout_style">
            <TextView
                android:text="@string/detail_place_of_origin_label"
                style="@style/detail_activity_label_style" />

            <TextView
                android:id="@+id/place_of_origin_tv"
                style="@style/detail_activity_value_style" />
        </LinearLayout>

        <TextView
            android:text="@string/detail_description_label"
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <TextView
            android:id="@+id/description_tv"
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/detail_activity_bottom_margin"/>

    </LinearLayout>
</ScrollView>
